<div class="page-header">
  <h1>
    My Books
    <a href="/favorites/new" class="btn btn-lg btn-success">Add Favorite</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th class="col-md-3">Image</th>
        <th>Book</th>
        <th>Actions</th>
      </tr>

      <% current_user.favorites.each do |favorite| %>
      <tr>
        <td><img src="<%= Book.find(favorite.book_id).image_url %>" class="img-responsive"></td>
        <td><%= Book.find(favorite.book_id).title %></td>
        <td>
          <a href="/favorites/<%= favorite.id %>" class="btn btn-primary">Show</a>
          <a href="/favorites/<%= favorite.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_favorite/<%= favorite.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
