<div class="page-header">
  <h3>Author #<%= @author.id %></h3>
</div>

<div class ="container">
<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>Name</dt>
      <dd><%= @author.name %></dd>

      <dt>Bio</dt>
      <dd><%= @author.bio %></dd>

      <dt>Image</dt>
      <dd><img src="<%= @author.image_url %>" class="img-responsive"></dd>

      <dt>Dob</dt>
      <dd><%= @author.dob %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/authors" class="btn btn-primary">
        Back
      </a>
      <a href="/authors/<%= @author.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_author/<%= @author.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<hr>

<h3><%= @author.name %>'s Titles</h3>
<div class="row">
  <div class="list-group">
    <% @author.books.each do |book| %>
    <a href="/books/<%= book.id %>">
    <button type="button" class="list-group-item"><%= book.title %></button>
    </a>
    <% end %>
  </div>
</div>
</div>
